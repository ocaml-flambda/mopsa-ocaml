(**
  C_simplify - C AST to C AST simplification
 *)

open C_AST

type context
(** A simplification context must be created to perform simplification.
    All simplifications for the C program must occur within the same context.
 *)

val create_context : unit -> context
(** Create a simplification context. *)

val simplify_func : context -> func -> unit
(** Simplify a single C function in the given context. *)
  
