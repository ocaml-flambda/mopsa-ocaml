#!/bin/bash

MOPSADIR="$(cd "$(dirname "$0")" && pwd -P)/.."
CONFIG=python/multilanguage.json
SHAREDIR=$(realpath ${MOPSADIR}/share/mopsa)
PYTHONH=$(python3 -c "import sys; print(f'/usr/include/python{sys.version_info.major}.{sys.version_info.minor}/')")

${MOPSADIR}/bin/mopsa-python -config=${CONFIG} -hash-heap-address=true -split-returns -unprecise-exn=MemoryError  -library-only -default-alloc-pol=range -I=$PYTHONH -ccopt="-include${SHAREDIR}/stubs/cpython/python_stubs.h" -additional-stubs=cpython/Python.c,cpython/python_stubs.c  -use-stub=memset,vasprintf,memcpy,memmove,strcpy $@
