# Targets
TARGET_BINS = mopsa
TARGET_LIBS = MopsaAnalyzer



# Packs
mopsa = mopsa_analyzer main
MopsaAnalyzer = mopsa_analyzer
mopsa_analyzer = framework mopsa lang

# Universal domains
include src/mopsa_analyzer/framework/Makefile
include src/mopsa_analyzer/lang/universal/Makefile
include src/mopsa_analyzer/lang/repl/Makefile

# CFG domains
include src/mopsa_analyzer/lang/cfg/Makefile

# C domains
ifneq (@disable_c@,yes)
include src/mopsa_analyzer/lang/stubs/Makefile
include src/mopsa_analyzer/lang/c/Makefile
endif

# Python domains
ifneq (@disable_python@,yes)
include src/mopsa_analyzer/lang/python/Makefile
include src/mopsa_analyzer/lang/cpython/Makefile
endif


# MOPSA make rules
MOPSAROOT = @top_srcdir@
include $(MOPSAROOT)/make/main.mk




# Install

inst_src  := $(MOPSAROOT)/bin
inst_bins := $(foreach f, $(wildcard $(inst_src)/*), $(shell basename $f))

install:
	@mkdir -p @prefix@/bin
	@for i in $(inst_bins); do \
		if test -f $(inst_src)/$$i; then \
			echo -e "$(INSTALLMSG)     bin/$$i"; \
			cp -f $(inst_src)/$$i @prefix@/bin/$$i; \
		fi; \
	done
	@mkdir -p @prefix@/share
	@echo -e "$(INSTALLMSG)     share/mopsa"
	@cp -r -f $(MOPSAROOT)/share/mopsa @prefix@/share

uninstall:
	@for i in $(inst_bins); do \
		if test -f $(inst_src)/$$i; then \
			echo -e "$(UINSTALLMSG)     bin/$$i"; \
			rm -f @prefix@/bin/$$i; \
		fi; \
	done
	@echo -e "$(UINSTALLMSG)     share/mopsa"
	@rm -rf @prefix@/share/mopsa


# Tests
.PHONY: tests universal-tests cfg-tests

TESTS = universal-tests
universal-tests.directory = tests/universal
universal-tests.extension = u
universal-tests.analyzer = mopsa-universal

TESTS += cfg-tests
cfg-tests.directory = tests/universal
cfg-tests.extension = u
cfg-tests.analyzer = mopsa-cfg

ifneq (@disable_c@,yes)
TESTS += c-tests
.PHONY: c-tests
c-tests.directory = tests/c
c-tests.extension = c
c-tests.analyzer = mopsa-c
endif

ifneq (@disable_python@,yes)
TESTS += python-tests
.PHONY: python-tests
python-tests.directory = tests/python
python-tests.extension = py
python-tests.analyzer = mopsa-python
endif


tests: $(TESTS)

$(TESTS):
	@ - $(foreach test, $(shell find $($@.directory) -name "*tests.$($@.extension)"), \
		echo ""; \
		echo "Running test $($@.analyzer) $(test)"; \
		$(MOPSAROOT)/bin/$($@.analyzer) -no-warning -unittest $(MOPSAPARAM) $(test); \
	)
