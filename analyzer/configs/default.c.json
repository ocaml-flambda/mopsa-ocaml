{
    "iter": [
        //Program entry point
        "c.program",
        "c.alarms",
        "universal.unit_tests",

        //Libraries
        "c.libs.mopsa",
        "c.libs.stdlib",

        //Desugarisation
        "c.desugar.andor",
        "c.desugar.assign",
        "c.desugar.loops",

        //Flows
        "c.flows.switch",
        "c.flows.interproc",
        "c.flows.goto",
        "universal.flows.loops",
        "universal.flows.intraproc",
        "universal.flows.interproc",

        //Heap abstraction
        {
            "unify": "universal.heap.recency",
            "over": {
                "iter": [
                    //Memory abstraction
                    "c.memory.machine_integers",
                    //Cell abstraction
                    {
                        "reduce-unify": ["c.memory.cell.expand", "c.memory.cell.smashing"],
                        "over": {
			    "iter": [
				"c.memory.pointer",
				//Numeric abstraction
				{
				    "reduce": [
					"universal.numeric.domains.boxes.int",
					"universal.numeric.domains.boxes.congruence"
				    ]
				}
			    ]
                        }
                    }
                ]
            }
        }
    ]
}
