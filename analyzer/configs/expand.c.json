{
    "iter": [
        //Program entry point
        "c.program",
        "c.alarms",
        "universal.unit_tests",

        //Libraries
        "c.libs.mopsa",
        "c.libs.stdlib",

        //Desugarisation
        "c.desugar.andor",
        "c.desugar.stmt_rvals",
	      "c.desugar.records",
        "c.desugar.loops",

        //Flows
        { "fun" : "universal.flows.memoisation",
          "arg" :
          {
              "iter" :
              [
                  "c.flows.switch",
                  "c.flows.interproc",
                  "universal.flows.loops",
                  "universal.flows.intraproc",
                  "universal.flows.interproc",
                  "c.flows.goto",

                  //Heap abstraction
                  {
                      "unify": "universal.heap.recency",
                      "over": {
                          //Memory abstraction
                          "reduce-unify": ["c.memory.cell.expand"],
                          "over": {
                              "iter": [
                                  "c.memory.pointer",
                                  "c.memory.decomposer",
                                  { "fun" : "c.memory.machine_integers",
                                    "arg" : "universal.numeric.domains.boxes.int"
                                  }
                              ]
                          }
                      }
                  }
              ]
          }
        }
    ]
}
