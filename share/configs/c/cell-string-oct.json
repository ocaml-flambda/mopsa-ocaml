{
    "language": "c",
    "domain": {
	"seq": [
            // Universal iterators
            "universal.iterators.intraproc",
            "universal.iterators.loops",
            "universal.iterators.interproc.inlining",
            "universal.iterators.unittest",

	    // C libraries
            "c.libs.libc",
            "c.libs.libmopsa",

	    // C iterators
            "c.iterators.program",
            "c.iterators.interproc",
            "c.iterators.goto",
            "c.iterators.switch",
            "c.iterators.loops",

            // C desugar
            "c.desugar.cond_expr",

	    // Stubs
            "stubs.iterator",
            "c.cstubs.file",
	    "c.cstubs.resources",

            // Memory model
	    {
                "apply": {
                    "compose": [
                        "c.memory.structured.flat",
                        "universal.heap.recency.callstack_range",
                        {
                            "product": [
                                "c.memory.lowlevel.cells",
                                "c.memory.lowlevel.string_length"
                            ],
                            "reductions": [
                                "c.memory.lowlevel.reductions.cell_string_length"
                            ]
                        },
                        {
                            "seq": [
			        "c.memory.scalars.pointer",
			        "c.memory.scalars.machine_numbers"
                            ]
                        }
                    ]
                },
		"on": {
                    "product": [
                        "universal.numeric.relational.octagon",
                        {
                            "nonrel": {
			        "disjoint": [
			            "universal.numeric.values.intervals.float",
                                    "universal.numeric.values.intervals.integer"
			        ]
		            }
                        }
                    ],
                    "reductions": [
                        "universal.numeric.reductions.intervals"
                    ]
                }
            }
	]
    }
}
