{
    "language": "c",
    "domain": {
	"seq": [
            // Universal iterators
            "universal.iterators.intraproc",
            "universal.iterators.loops",
            "universal.iterators.interproc.inlining",
            "universal.iterators.unittest",


	    // C iterators
            "c.iterators.program",
            "c.iterators.interproc",
            "c.iterators.goto",
            "c.iterators.switch",
            "c.iterators.loops",

            // Stubs
	    "stubs.iterator",

            // C desugar
            "c.desugar.constants",
            "c.desugar.conditions",

            "c.memory.variable_length_array",

            // Libraries
            "c.libs.compiler",
            "c.libs.mopsalib",
            "c.libs.clib.file_descriptor",
            "c.libs.clib.formatted_io.fprint",
            "c.libs.clib.formatted_io.fscanf",
            "c.libs.variadic",
	    "c.libs.cstubs",

            // Memory model
	    {
                "apply": {
                    "compose": [
                        "c.memory.structured.flat",
                        "universal.heap.recency.callstack_range",
                        {
                            "product": [
                                "c.memory.lowlevel.cells",
                                "c.memory.lowlevel.string_length",
                                "c.memory.lowlevel.pointer_sentinel",
                                "c.memory.lowlevel.pointer_smashing"
                            ],
                            "reductions": [
                                "c.memory.lowlevel.reductions.cell_pointer_smashing",
                                "c.memory.lowlevel.reductions.cell_pointer_sentinel"
                            ]
                        },
                        {
                            "seq": [
			        "c.memory.scalars.pointer",
			        "c.memory.scalars.machine_numbers"
                            ]
                        }
                    ]
                },
		"on": {
                    "product": [
                        {
                            "nonrel": {
			        "union": [
			            "universal.numeric.values.intervals.float",
                                    "universal.numeric.values.intervals.integer"
			        ]
		            }
                        },
			{
                            "apply":"c.memory.packing.static_scope",
                            "on": "universal.numeric.relational"
                        }
		    ],
                    "reductions": [
                        "c.memory.packing.reductions.intervals_static_scope"
                    ]
                }
            }
	]
    }
}
